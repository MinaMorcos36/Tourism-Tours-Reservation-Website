@model List<TourismToursWebsite.Models.Tour>

@{
    ViewData["Title"] = "My Cart";
}

<style>
    body {
        background: linear-gradient(to bottom right, #87CEFA, #FFFACD);
        font-family: 'Segoe UI', sans-serif;
    }

    .cart-card {
        background-color: #ffffff;
        max-width: 900px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .cart-card:hover {
            transform: scale(1.02);
        }

        .cart-card h2 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-size: 30px;
            font-weight: bold;
        }

    .cart-item {
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
    }

        .cart-item:last-child {
            border-bottom: none;
        }

        .cart-item h4 {
            margin: 0;
            font-size: 20px;
            color: #444;
            font-weight: bold;
        }

        .cart-item p {
            margin: 5px 0;
            font-size: 14px;
            color: #666;
        }

    .btn-custom {
        margin-left: 10px;
        padding: 8px 15px;
        font-size: 16px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .btn-success {
        background-color: #2ecc71;
        color: white;
    }

        .btn-success:hover {
            background-color: #27ae60;
        }

    .total-price {
        font-size: 22px;
        font-weight: bold;
        text-align: center;
        margin-top: 20px;
        color: #2c3e50;
    }

    .text-center {
        text-align: center;
    }

    .cart-item .price {
        font-weight: bold;
        color: #e74c3c;
    }

    .cart-item form {
        display: inline-block;
    }
</style>

<div class="cart-card">
    <h2>Your Reservations</h2>

    @foreach (var item in Model)
    {
        <div class="cart-item">
            <div>
                <h4>@item.Name</h4>
                <p>@item.Description</p>
                <p class="price">Price: $@item.Price</p>
            </div>
        </div>
    }

</div>
